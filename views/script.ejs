          operation = "-";
          clean();
      }
      //multiplication
      mult.onclick = function(e){
          value1 = result.textContent;
          operation = "*";
          clean();
      }
      //division
      div.onclick = function(e){
          value1 = result.textContent;
          operation = "/";
          clean();
      }
      //equal
      equal.onclick = function(e){
          value2 = result.textContent;
          resolve();
      }
      //exponential
      EXP.onclick = function(e){
        value1 = result.textContent;
        operation = 'EXP';
        resolve();
      }
      //factorial
      fact.onclick = function(e){
        value1 = result.textContent;
        operation = 'fact';
        resolve();
      }
      //porcentage
      porcentage.onclick = function(e){
        value1 = result.textContent;
        operation = '%';
        clean();
      }
      //Square
      sqr.onclick = function(e){
        value1 = result.textContent;
        operation = 'sqr';
        resolve();
      }
      //Cube
      cube.onclick = function(e){
        value1 = result.textContent;
        operation = 'cube';
        resolve();
      }
      //Elevate Y
      elvate.onclick = function(e){
        value1 = result.textContent;
        operation = 'elevateY';
        clean();
      }
      //+-
      plusMinus.onclick = function(e){
        value1 = result.textContent;
        operation = '+-'
        resolve();
      }
      //root
      root.onclick = function(e){
        value1 = result.textContent;
        operation = 'root';
        resolve();
      }
  }
//Cleaning the textContent
  function clean(){
    result.textContent="";
  }
//Reset variables
  function resete(){
    result.textContent="";
    value1 = 0;
    value2 = 0;
    operation ="";
  }
//Switch for every case to return a result
  function resolve(){
    var res = 0;
    switch(operation){
      //adding
      case "+":
        res = parseFloat(value1) + parseFloat(value2);
        break;
      //substracting
      case "-":
        res = parseFloat(value1) - parseFloat(value2);
        break;
      //mulpliying
      case "*":
        res = parseFloat(value1) * parseFloat(value2);
        break;
      //division
      case "/":
        res = parseFloat(value1) / parseFloat(value2);
        break;
      //exponential
      case "EXP":
        res = 10 ** parseFloat(value1);
        break;
      //factorial
      case "fact":
        res = fact(parseFloat(value1));
        break;
      //porcentage
      //en espa√±ol xD primero es el porcentaje, luego el valor
      //es decir "el 25% de 100" funciona asi como se lee
      case "%":
        res = (parseFloat(value1) /100) * parseFloat(value2);
        break;
      //Square
      case "sqr":
        res = parseFloat(value1) ** 2;
        break;
      //Cube
      case "cube":
        res = parseFloat(value1)**3;
        break;
      //ElevateY
      case "elevateY":
        res = parseFloat(value1) ** parseFloat(value2);
        break;
      //+-
      //No supe como crear 2 eventos para el boton
      //para que cuando tenga el - se pase a +
      //si me puede ayudar? porfas
      case "+-":
        if(res == minus() + parseFloat(value1)){
          res = plus() + parseFloat(value1);
        }else{
          res = minus() + parseFloat(value1);
        }break;
      //Square root
      case "root":
        res = Math.sqrt(parseFloat(value1));
        break;
      //default
      default:
        res= "No data entered";
    }
    resete();
    result.textContent = res;
  }
//Factorial
  function fact(n){
        if(n == 0 || n == 1 ){
          return  1;
        }else{
          return  n * fact(n-1);
        }
  }
  function plus()
  {
      return ""
  }

  function minus()
  {
      return "-"
  }
</script>